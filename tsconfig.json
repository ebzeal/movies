{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "#root/*": ["./src/*"],
      "#accessEnv": ["./src/helpers/accessEnv"]
    },
    "outDir": "./dist",
    "strict": true,
    "target": "es6",
    "types": ["node"],
    "strictPropertyInitialization": false,
  },
  "include": [
      "./**/*"
  ],
  "exclude": [
      // "db/**/*",
      "node_modules",
      "dist"
  ]
}
