{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "#root/*": ["./src/*"],
      "#root": ["./src"],
      "#rootdb/*": ["./db/*"],
      "#rootdb": ["./db"],
      "#accessEnv": ["./src/helpers/accessEnv"],
      "@entities":["./db/models/index.ts"]
    },
    "outDir": "./dist",
    "strict": true,
    "target": "ES2022",
    "types": ["node"],
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
      "./**/*"
  ],
  "exclude": [
      "db/**/*",
      "node_modules",
      "dist"
  ]
}
